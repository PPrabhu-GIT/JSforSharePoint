# Add the below code to script editor in SHarePoint Edi form
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js"
       type="text/javascript"></script>
<script type="text/javascript">
$(function() {
//Disable Multiple line text box in SharePoint form
  $("textarea[title='Project Description']").attr("readonly","true").css('background-color','#E6E6E6');

//As a second option, you can use disable attribute as shown below. but this will disable scroll up and down too.
//$("textarea[title='Your field display name']").attr('disabled', 'disabled');
}); 
</script>
